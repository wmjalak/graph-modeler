{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "graph-modeler": [
        // "dist/graph-modeler"
        "projects/graph-modeler-lib/src/public_api.ts" // for development
      ],
      "graph-modeler/*": [
        "dist/graph-modeler/*"
      ]
    }
  }
}
